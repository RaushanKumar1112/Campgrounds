<% layout('layouts/boilerplate')%>

  <div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="row">
      <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
        <div class="card shadow">
          <img
            src="https://images.unsplash.com/photo-1621874743633-61f462bb69ff?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MzN8fGNhbXBpbmd8ZW58MHx8Mnx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60"
            alt="" class="card-img-top">
          <div class="card-body">
            <h5 class="card-title">Login</h5>
            <form action="/login" method="POST" class="validated-form" novalidate>
              <div class="mb-3">
                <label class="form-label" for="username">Username:</label>
                <input class="form-control" type="text" name="username" id="username" autofocus required>
                <div class="valid-feedback">
                  Looks Good!
                </div>
                <div class="mb-3">
                  <label class="form-label" for="password">Password:</label>
                  <input class="form-control" type="password" name="password" id="password" required>
                  <div class="valid-feedback">
                    Looks Good!
                  </div>
            </form>
            <div class="my-3">
              <button class="btn btn-success btn-block">Login</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>